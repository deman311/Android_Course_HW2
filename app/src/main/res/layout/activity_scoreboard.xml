<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_space">

    <TextView
        android:id="@+id/score_TXT_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SCOREBOARD"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_margin="20dp"></TextView>

    <fragment
        android:id="@+id/score_FRG_highscores"
        android:name="com.example.class23a_and_hw1.Fragments.ScoreboardFragment"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_below="@id/score_TXT_title"
        android:layout_centerHorizontal="true"></fragment>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/score_FRG_map"
        xmlns:tools="http://schemas.android.com/tools"
        android:name="com.example.class23a_and_hw1.Fragments.MapFragment"
        android:layout_below="@id/score_FRG_highscores"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ScoreActivity" />

</RelativeLayout>